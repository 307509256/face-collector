- content_for(:title, 'Labels')

h1 Labels

form.well
  .form-group
    input.form-control name="q" value=params[:q]
  button.btn.btn-primary Search

= page_entries_info @labels

table.table
  thead
    tr
      - if params[:order] == 'index_number'
        th
          = link_to 'Index', params.merge(order: :index_number)
      th
        = link_to 'Name', params.merge(order: :name)
      th
        = link_to 'Description', params.merge(order: :description)
      th
        = link_to 'Twitter', params.merge(order: :twitter)
      th Faces
      - if user_signed_in?
        th
        th

  tbody
    - @labels.each do |label|
      tr
        - if params[:order] == 'index_number'
          td = label.index_number
        td = link_to label.name, label_path(label)
        td = label.description
        td
          - if label.twitter.present?
            = "@#{ label.twitter }"
        td = @counts[label.id] || 0
        - if user_signed_in?
          td = link_to 'Edit', edit_label_path(label)
          td = link_to 'Destroy', label, data: { confirm: 'Are you sure?' }, method: :delete

.text-center
  = paginate @labels

- if user_signed_in?
  hr
  = link_to 'New Label', new_label_path, class: %(btn btn-link)
